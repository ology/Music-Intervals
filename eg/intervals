#!/usr/bin/env perl
use strict;
use warnings;

use Data::Dumper::Concise;
use Music::Intervals;

my @notes = @ARGV ? @ARGV : qw(C Eb G);

my $m = Music::Intervals->new(notes => \@notes);

print Dumper
    $m->chord_names,
    $m->natural_frequencies,
    $m->natural_intervals,
    $m->natural_cents,
    $m->natural_prime_factors,
    $m->eq_tempered_frequencies,
    $m->eq_tempered_intervals,
    $m->eq_tempered_cents,
    $m->integer_notation,
;
